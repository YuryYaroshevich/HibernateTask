<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.epam.ht.entity.employee">
	<class name="Employee" table="Employee" lazy="false">
		<id name="id" column="EMPLOYEE_ID" type="long">
			<generator class="increment" />
		</id>
		<property name="firstName" column="FIRST_NAME" not-null="true" />
		<property name="lastName" column="LAST_NAME" not-null="true" />
		<many-to-one name="address" column="EMPLOYEE_ID" unique="true"
			not-null="true" class="com.epam.ht.entity.address.Address" insert="false"
			update="false" />
		<map name="jobs" table="OFFICE_EMPLOYEE">
			<key column="EMPLOYEE_ID" />
			<map-key-many-to-many column="OFFICE_ID"
				class="com.epam.ht.entity.office.Office" />
			<composite-element class="Position">
				<property name="position" column="POSITION" />
			</composite-element>
		</map>
	</class>


	<sql-query name="query.CorrespondEmployeeIds">
	    <return-scalar column="employee_id" type="long" />
	    <![CDATA[select employee_id from yra.employee
	                                where :first_row_numb <= rownum and
	                                rownum <= :last_row_numb]]>
	</sql-query>
	<query name="query.EmployeeList">
		<![CDATA[from Employee emp inner join fetch emp.jobs          
		                           inner join fetch emp.address addr
		                                 inner join fetch addr.city c
		                                 inner join fetch c.country
		                       where emp.id in (:employee_ids)]]>
	</query>
	<query name="query.CorrespondOffices">
	    <![CDATA[from Office o inner join fetch o.company
	                           inner join fetch o.address addr
		                       inner join fetch addr.city c
		                       inner join fetch c.country
	                     where o.id in (:office_ids)]]>
	</query>
	<sql-query name="query.CorrespondOfficeIds">
	    <return-scalar column="office_id" type="long" />
	    <![CDATA[select distinct office_id from yra.office_employee 
	                           where employee_id in (:employee_ids)]]>
	</sql-query>
	<query name="query.EmployeesNumber">
	    <![CDATA[select count(*) from Employee]]>
	</query>
</hibernate-mapping>